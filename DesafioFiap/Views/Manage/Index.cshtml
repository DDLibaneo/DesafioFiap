@model DesafioFiap.Models.IndexViewModel
@{
    ViewBag.Title = "Gerenciar conta";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Configurações da conta</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Senha:</dt>
        <dd>            
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Trocar senha", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Criar", "SetPassword")
            }            
        </dd>
    </dl>
</div>
